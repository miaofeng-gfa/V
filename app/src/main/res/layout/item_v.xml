<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="220px"
        android:layout_height="262px"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="24px">

        <RelativeLayout
            android:layout_width="148px"
            android:layout_height="148px">

            <com.veeca.ted.v.widget.CircleImageView
                android:id="@+id/v_avatar"
                android:layout_width="148px"
                android:layout_height="148px" />

            <ImageView
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/red_v" />
        </RelativeLayout>

        <TextView
            android:id="@+id/v_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px"
            android:textColor="@color/font_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/v_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/font_gray_9"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>