<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/not_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="748px"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="39px"
        android:layout_marginRight="39px"
        android:layout_marginTop="36px"
        android:background="@mipmap/shang_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32px"
            android:text="打赏红包约聊TA"
            android:textColor="#F15656"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="500px"
            android:layout_height="88px"
            android:layout_marginTop="44px"
            android:background="@drawable/qun_v_kuang"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:text="¥"
                android:textColor="@color/font_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/join_shang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12px"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="输入打赏金额"
                android:inputType="numberDecimal"
                android:textColor="@color/font_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="500px"
            android:layout_height="88px"
            android:layout_marginTop="24px"
            android:background="@drawable/qun_v_kuang"
            android:gravity="center">

            <EditText
                android:id="@+id/join_wx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20px"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入您的微信号"
                android:textColor="@color/font_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/join_btn"
            android:layout_width="158px"
            android:layout_height="158px"
            android:layout_marginTop="44px"
            android:background="@color/not_bg"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/join_all_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32px"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:layout_weight="1"
            android:gravity="center"
            android:text="约聊不成功，红包将在72小时内退回您的账户"
            android:textColor="#BE3737"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/join_close"
        android:layout_width="72px"
        android:layout_height="72px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="46px"
        android:src="@mipmap/close_n" />
</RelativeLayout>