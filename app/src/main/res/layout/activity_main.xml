<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.veeca.ted.v.view.main.MainActivity">


    <RelativeLayout
        android:id="@+id/main_top"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/yellow">

        <ImageView
            android:layout_width="120px"
            android:layout_height="44px"
            android:layout_centerInParent="true"
            android:src="@mipmap/home_logo" />

        <ImageView
            android:id="@+id/iv_my_message"
            android:layout_width="44px"
            android:layout_height="36px"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/home_more"
            android:visibility="gone"/>



        <RelativeLayout
            android:id="@+id/main_more"
            android:layout_width="wrap_content"
            android:layout_height="96px"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_main_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="40dp"
                android:src="@drawable/learner_btn_selector" />

            <TextView
                android:id="@+id/tv_new_more"
                android:layout_width="66dp"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:text="发布"
                android:textColor="@color/font_gray_60"
                android:textSize="15sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_my_seting"
                android:layout_width="44px"
                android:layout_height="36px"
                android:layout_centerInParent="true"
                android:layout_marginLeft="40dp"
                android:src="@drawable/settings"
                android:visibility="gone"/>

        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_top"
        android:layout_marginBottom="90px" />

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/home_bottom"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_home"
            android:layout_width="wrap_content"
            android:layout_height="90px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_image_home"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/shangjin_n" />

            <TextView
                android:id="@+id/main_text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_home"
                android:textColor="@color/font_gray_60"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_community"
            android:layout_width="wrap_content"
            android:layout_height="90px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_image_community"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/shequn_n" />

            <TextView
                android:id="@+id/main_text_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_community"
                android:textColor="@color/font_gray_60"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_btn"
            android:layout_width="120px"
            android:layout_height="110px"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="92px"
                android:layout_height="92px"
                android:src="@mipmap/home_v" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_income"
            android:layout_width="wrap_content"
            android:layout_height="90px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_image_income"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/shouyi_n" />

            <TextView
                android:id="@+id/main_text_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_income"
                android:textColor="@color/font_gray_60"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_my"
            android:layout_width="wrap_content"
            android:layout_height="90px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_image_my"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/my_n" />

            <TextView
                android:id="@+id/main_text_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_my"
                android:textColor="@color/font_gray_60"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
