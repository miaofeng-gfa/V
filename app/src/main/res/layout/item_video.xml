<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/font_color"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/video_bg"
            android:layout_width="match_parent"
            android:layout_height="406px"
            android:scaleType="centerCrop"
            android:visibility="visible" />


        <com.veeca.ted.v.widget.VideoPlayer
            android:id="@+id/videoPlayer"
            android:layout_width="match_parent"
            android:layout_height="406px"
            android:visibility="visible" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/font_bottom_color"
        android:paddingLeft="28px"
        android:paddingRight="28px">

        <ImageView
            android:id="@+id/image"
            android:layout_width="40px"
            android:layout_height="40px" />

        <TextView
            android:id="@+id/video_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12px"
            android:textColor="@color/font_dd00"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="28px"
            android:layout_height="20px"
            android:layout_marginLeft="24px"
            android:src="@mipmap/video_see" />

        <TextView
            android:id="@+id/video_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:textColor="@color/font_gray_b5"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="20px"
            android:layout_height="22px"
            android:layout_marginLeft="24px"
            android:src="@mipmap/video_share" />

        <TextView
            android:id="@+id/video_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:layout_weight="1"
            android:textColor="@color/font_gray_b5"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/video_btn"
            android:layout_width="220px"
            android:layout_height="60px"
            android:background="@mipmap/video_btn"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30px"
                android:layout_height="28px"
                android:src="@mipmap/share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_text2"
                android:textColor="@color/font_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/video_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12px"
                android:textColor="@color/font_color"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>