<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/yellow">

        <ImageView
            android:id="@+id/top_return"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:src="@mipmap/left" />

        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/font_color"
            android:textSize="16sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="190px"
        android:layout_below="@id/top"
        android:layout_marginTop="16px"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="420px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bind_account_text2"
                android:textColor="@color/font_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bind_account_text3"
                android:textColor="@color/font_gray_9"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/bind_up"
            android:layout_width="130px"
            android:layout_height="130px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32px"
            android:src="@mipmap/bind_photo" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/account_btn"
        android:layout_below="@id/layout1"
        android:layout_marginTop="16px"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="32px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bind_account_text5"
            android:textColor="@color/font_color"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:scaleType="fitXY" />
    </LinearLayout>

    <Button
        android:id="@+id/account_btn"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_alignParentBottom="true"
        android:background="@color/font_color"
        android:gravity="center"
        android:text="@string/bind_account_text4"
        android:textColor="@color/yellow"
        android:textSize="18sp" />
</RelativeLayout>