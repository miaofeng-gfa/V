<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_task_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000" />

        <!--<TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_task_lvrep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/approve"
            android:gravity="center"
            android:paddingLeft="5px"
            android:paddingRight="5px"
            android:textColor="@color/font_color"
            android:textSize="15sp" />-->

       <!-- <TextView
            android:id="@+id/tv_task_surplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5px"
            android:textColor="@color/white"
            android:textSize="10sp" />-->


        <LinearLayout
            android:id="@+id/task_item_injoined"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/task_click_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/colorAccent"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/task_click_countdes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已获得有效点击数"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/bg_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/task_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0.42"
                    android:textColor="@color/colorAccent"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/task_item_moneydes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前的分红"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/task_item_uninjoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_task_money"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:textColor="@color/yellow"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/tv_task_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@color/yellow1"
                    android:layout_marginVertical="-8dp"
                    android:textColor="@color/font_color"
                    android:text="可提现"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_task_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="@color/font_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_task_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:paddingLeft="48px"
                android:paddingRight="48px"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/font_color"
        android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/font_bottom_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="28px"
        android:paddingRight="28px">

        <ImageView
            android:id="@+id/image"
            android:layout_width="40px"
            android:layout_height="40px" />

        <TextView
            android:id="@+id/tv_task_surplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12px"
            android:textColor="@color/font_dd00"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="28px"
            android:layout_height="20px"
            android:layout_marginLeft="24px"
            android:src="@mipmap/video_see" />

        <TextView
            android:id="@+id/task_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:textColor="@color/font_gray_b5"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="20px"
            android:layout_height="22px"
            android:layout_marginLeft="24px"
            android:src="@mipmap/video_share" />

        <TextView
            android:id="@+id/task_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:layout_weight="1"
            android:textColor="@color/font_gray_b5"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/task_btn"
            android:layout_width="160px"
            android:layout_height="50px"
            android:background="@mipmap/video_btn"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30px"
                android:layout_height="28px"
                android:src="@mipmap/redpacket" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领分红"
                android:textColor="@color/font_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/task_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12px"
                android:textColor="@color/font_color"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>