<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32px"
        android:text="上传名片或工牌可以认证成为大V"
        android:textColor="@color/font_color"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="656px"
        android:layout_height="368px"
        android:scaleType="fitXY"
        android:layout_below="@id/top_text"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/photo_bg" />

    <Button
        android:id="@+id/camera"
        android:layout_width="124px"
        android:layout_height="124px"
        android:layout_below="@id/top_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92px"
        android:background="@mipmap/camera" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="312px"
        android:layout_height="90px"
        android:layout_below="@id/photo"
        android:layout_marginLeft="32px"
        android:layout_marginTop="32px"
        android:background="@drawable/phone_kuang_n"
        android:text="跳过"
        android:textColor="@color/font_color"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="312px"
        android:layout_height="90px"
        android:layout_below="@id/photo"
        android:layout_margin="32px"
        android:layout_toRightOf="@id/btn1"
        android:background="@drawable/login_btn"
        android:text="提交"
        android:textColor="@color/font_color"
        android:textSize="16sp" />
</RelativeLayout>