<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="24px">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px">

        <LinearLayout
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_marginLeft="24px"
            android:layout_marginTop="24px"
            android:background="@drawable/qun_btn_gray"
            android:gravity="center">

            <ImageView
                android:id="@+id/qun_avatar"
                android:layout_width="80px"
                android:layout_height="80px" />
        </LinearLayout>

        <ImageView
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_marginLeft="94px"
            android:layout_marginTop="94px"
            android:src="@mipmap/red_v" />

        <TextView
            android:id="@+id/qun_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="138px"
            android:layout_marginRight="12px"
            android:layout_marginTop="24px"
            android:layout_toLeftOf="@id/qun_btn"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/font_color"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="26px"
            android:layout_below="@id/qun_name"
            android:layout_marginLeft="138px"
            android:layout_marginTop="6px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80px"
                android:layout_height="26px"
                android:background="@drawable/tag_b"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14px"
                    android:layout_height="20px"
                    android:src="@mipmap/tag_man" />

                <TextView
                    android:id="@+id/qun_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3px"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/qun_tag1"
                android:layout_width="80px"
                android:layout_height="26px"
                android:layout_marginLeft="20px"
                android:background="@drawable/tag_r"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="4px"
                android:paddingRight="4px"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/qun_tag2"
                android:layout_width="80px"
                android:layout_height="26px"
                android:layout_marginLeft="20px"
                android:background="@drawable/tag_r"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="4px"
                android:paddingRight="4px"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/qun_tag3"
                android:layout_width="80px"
                android:layout_height="26px"
                android:layout_marginLeft="20px"
                android:background="@drawable/tag_r"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="4px"
                android:paddingRight="4px"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20px"
            android:layout_below="@id/layout1"
            android:layout_marginLeft="138px"
            android:layout_marginTop="6px"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/xing1"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_marginRight="4px"
                android:src="@mipmap/xing_un" />

            <ImageView
                android:id="@+id/xing2"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_marginRight="4px"
                android:src="@mipmap/xing_un" />

            <ImageView
                android:id="@+id/xing3"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_marginRight="4px"
                android:src="@mipmap/xing_un" />

            <ImageView
                android:id="@+id/xing4"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_marginRight="4px"
                android:src="@mipmap/xing_un" />

            <ImageView
                android:id="@+id/xing5"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_marginRight="4px"
                android:src="@mipmap/xing_un" />

            <TextView
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_gray_9"
                android:textSize="9sp" />
        </LinearLayout>

        <Button
            android:id="@+id/qun_btn"
            android:layout_width="152px"
            android:layout_height="56px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32px"
            android:background="@mipmap/qun_btn"
            android:gravity="center"
            android:textColor="@color/font_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/qun_hot"
            android:layout_width="152px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/qun_btn"
            android:layout_marginRight="32px"
            android:layout_marginTop="6px"
            android:gravity="center"
            android:textColor="@color/font_gray_9"
            android:textSize="10sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_gravity="center">

                <com.veeca.ted.v.widget.SuperCircleView
                    android:id="@+id/superview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:min_circle_radio="70"
                    app:ring_width="10" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cd_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#4FC7FF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/qun_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="#4FC7FF"
                        android:textSize="12sp" />
                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_gravity="center">

                <com.veeca.ted.v.widget.SuperCircleView
                    android:id="@+id/superview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:min_circle_radio="70"
                    app:ring_width="10" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cd_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFD14F"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="#FFD14F"
                        android:textSize="12sp" />
                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_gravity="center">

                <com.veeca.ted.v.widget.SuperCircleView
                    android:id="@+id/superview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:min_circle_radio="70"
                    app:ring_width="10" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cd_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#86E371"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="#86E371"
                        android:textSize="12sp" />
                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_gravity="center">

                <com.veeca.ted.v.widget.SuperCircleView
                    android:id="@+id/superview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:min_circle_radio="70"
                    app:ring_width="10" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cd_tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#F7728B"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="#F7728B"
                        android:textSize="12sp" />
                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="24px"
        android:background="@color/bg_color" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24px"
        android:scrollbars="none">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/qun_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </HorizontalScrollView>
</LinearLayout>
