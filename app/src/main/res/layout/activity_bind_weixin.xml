<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/yellow">

        <ImageView
            android:id="@+id/top_return"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:src="@mipmap/left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/bind_weixin_title"
            android:textColor="@color/font_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="502px"
        android:layout_height="944px"
        android:layout_below="@id/top"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/bind_weixin_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360px"
        android:layout_below="@id/top"
        android:background="#F2FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bind_up"
            android:layout_width="160px"
            android:layout_height="160px"
            android:src="@mipmap/bind_photo" />

        <Button
            android:id="@+id/bind_btn"
            android:layout_width="180px"
            android:layout_height="68px"
            android:layout_marginTop="24px"
            android:background="@drawable/login_btn"
            android:text="@string/profile_text"
            android:textColor="@color/font_color"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginTop="12px"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.点击微信下方的“通讯录”菜单"
            android:textColor="@color/font_gray_7c"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.滑动通讯录好友列表到最下方"
            android:textColor="@color/font_gray_7c"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.看到“xx位联系人”字样后截图"
            android:textColor="@color/font_gray_7c"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.从手机相册直接上传"
            android:textColor="@color/font_gray_7c"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>