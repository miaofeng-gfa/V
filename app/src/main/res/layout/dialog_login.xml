<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="334px"
            android:layout_centerInParent="true"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:background="@drawable/main_login_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54px"
                android:text="温馨提示"
                android:textColor="@color/font_color"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:text="需要登录，请问您是否去登录？"
                android:textColor="@color/font_gray_b"
                android:textSize="16sp" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="484px"
                android:layout_height="72px"
                android:layout_marginTop="64px"
                android:background="@drawable/login_btn"
                android:text="登录"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_alignBottom="@+id/relativeLayout2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="300px"
        android:layout_marginEnd="42px"
        android:src="@mipmap/close" />
</RelativeLayout>
