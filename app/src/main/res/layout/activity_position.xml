<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/yellow">

        <ImageView
            android:id="@+id/top_return"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:src="@mipmap/left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="身份认证"
            android:textColor="@color/font_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_margin="32px"
        android:text="上传名片或工牌可以提高影响力"
        android:textColor="@color/font_color"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="656px"
        android:layout_height="368px"
        android:layout_below="@id/top_text"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@mipmap/photo_bg" />

    <Button
        android:id="@+id/camera"
        android:layout_width="124px"
        android:layout_height="124px"
        android:layout_below="@id/top_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92px"
        android:background="@mipmap/camera" />


    <Button
        android:id="@+id/position_btn"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_below="@id/photo"
        android:layout_margin="32px"
        android:background="@drawable/login_btn"
        android:text="提交"
        android:textColor="@color/font_color"
        android:textSize="16sp" />
</RelativeLayout>