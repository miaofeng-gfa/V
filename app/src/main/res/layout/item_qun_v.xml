<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="320px"
        android:layout_height="98px"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px"
        android:background="@drawable/qun_v_kuang"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16px">

        <RelativeLayout
            android:layout_width="66px"
            android:layout_height="66px">

            <com.veeca.ted.v.widget.CircleImageView
                android:id="@+id/qun_avatar"
                android:layout_width="66px"
                android:layout_height="66px" />

            <ImageView
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/red_v" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qun_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/font_color"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/qun_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="24px"
                    android:layout_marginLeft="6px"
                    android:background="@drawable/entry_btn"
                    android:gravity="center"
                    android:paddingLeft="4px"
                    android:paddingRight="4px"
                    android:text="群主"
                    android:textColor="@color/font_color"
                    android:textSize="8sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/qun_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/font_gray_9"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>