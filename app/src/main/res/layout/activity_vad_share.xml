<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.veeca.ted.v.view.vadshare.VadShareActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/yellow">

        <ImageView
            android:id="@+id/iv_top_return"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:src="@mipmap/left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="好友分红贡献榜"
            android:textStyle="bold"
            android:textColor="@color/font_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_vadshare_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="分红规则"
            android:textColor="@color/font_gray_60"
            android:textSize="14sp" />
    </RelativeLayout>
    <!--<FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">-->


        <LinearLayout
            android:id="@+id/task_item_injoined"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/code_btn"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_vadshare_countdes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分红好友总数"
                    android:textColor="@color/font_gray_a1"
                    android:textSize="12sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_vadshare_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4048"
                        android:textColor="@color/text_black"
                        android:textSize="36sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人"
                        android:textStyle="bold"
                        android:textColor="@color/text_black"
                        android:textSize="15sp" />

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/bg_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_vadshare_moneydes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计好友分红"
                    android:textColor="@color/font_gray_a1"
                    android:textSize="12sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_vadshare_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2678.73"
                    android:textColor="@color/text_black"
                    android:textSize="36sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textStyle="bold"
                        android:textColor="@color/text_black"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

   <!-- </FrameLayout>-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="10dp"
                android:background="@mipmap/show_btn"
                android:layout_width="4dp"
                android:layout_height="16dp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="近30天增长趋势"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:layout_marginTop="12px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="32px"
        android:paddingRight="32px">


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="10dp"
                android:background="@mipmap/show_btn"
                android:layout_width="16dp"
                android:layout_height="4dp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:text="一度好友分红"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="10dp"
                android:background="@mipmap/show_btn"
                android:layout_width="16dp"
                android:textSize="12sp"
                android:layout_height="4dp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:textSize="12sp"
                android:text="二度好友分红"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="469px"
        android:background="@color/white"
        android:paddingLeft="1px"
        android:paddingRight="1px">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="469px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.design.widget.TabLayout
            android:id="@+id/vadshare_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="108px"
            android:background="@color/colorPrimary"
            app:tabIndicatorColor="@color/yellow"
            app:tabSelectedTextColor="@color/font_color"
            app:tabTextColor="@color/font_gray_d1" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vadshare_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_scrollFlags="scroll|enterAlways" />

    </LinearLayout>






</LinearLayout>
